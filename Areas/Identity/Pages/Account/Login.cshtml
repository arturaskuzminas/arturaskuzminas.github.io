@page
@model LoginModel


@{
    ViewData["Title"] = "Prisijungimas";
}

<style>
    .form-control:focus {
        border-color: #000000;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(0, 0, 0, 0.6);
    }

    #grad {
        background: rgb(2,0,36);
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(12,14,14,1) 0%, rgba(83,100,139,1) 100%);
    }
</style>
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row justify-content-center">
        <div class="col"></div>
        <div class="col-6 d-flex flex-column justify-content-center" id="grad">
            <div class="text-center">
                <h2 class="text-white" style="font-family: 'Montserrat', sans-serif;font-weight: bold;">Sveiki!</h2>
            </div>
            <div class="text-center">
                <a asp-area="Identity" asp-page="/Account/Register" type="button" class="btn btn-outline-light">Neturite paskyros ? Užsiregistruokite !</a>
            </div>
        </div>
        <div class="col-5 border border-dark">
            <section>
                <form id="account" method="post">
                    <div class="form-group">
                        <div asp-validation-summary="All" class="text text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
                            </div>
                            <input asp-for="Input.Email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-key"></i></span>
                            </div>
                            <input asp-for="Input.Password" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="col" style="padding-left:80px">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-black-50">Pamiršote slaptažodį ?</a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-outline-dark" style="width:200px">Prisijungti</button>
                    </div>
                    @*<div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-black-50">Pamiršote slaptažodį ?</a>
                            </p>
                        </div>*@
                </form>
            </section>
        </div>
        <div class="col"></div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>

</script>
