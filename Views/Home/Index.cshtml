@model IEnumerable<MyShop.Models.ProductModel>
@{
    ViewData["Title"] = "Pagrindinis";
}

<style>
    .card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: cover;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col" style="min-width: 710px;">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/181709267-884ba02f-96b2-48e8-a58c-f0dbf90e3f72.jpeg" class="d-block w-100" alt="..." height="400" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/5cbf5a3efa99af28517a2af2.jpeg" class="d-block w-100" alt="..." height="400" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/aIMG_0141.jpg" class="d-block w-100" alt="..." height="400" />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div> 
        <div class="col" style="min-width: 400px;padding-left:0px">
            <img src="https://i.ibb.co/nc3pZph/Screenshot-2021-05-12-105520.png" height="200" style="padding-bottom:5px;min-width:380px"/>
            <img src="https://i.ibb.co/LgxM10z/Screenshot-2021-05-12-105533.png" height="200" style="padding-top:5px;min-width:380px"/>
        </div>
    </div>
</div>
<br />
<!-------------------------------------------------------------------------------------------------------------------------->
<div class="container pt-5 text-right">
    <div class="row no-gutters" style="background-color: white; border:solid 1px">
        <div class="col offset-md-">
            <img src="~/images/hero-mainPage.jpg" height="400" />
        </div>
        <div class="col text-center align-self-center">
            <h2 style=" font-family: 'PT Serif', serif;">Vyriški laikrodžiai</h2>
        </div>
    </div>
</div>
<br />
<!-------------------------------------------------------------------------------------------------------------------------->
<div class="container card-group">
    @foreach (var item in Model)
    {
        if (item.ForSex.Contains('V'))
        {
            <div class="card text-center" style="width: 18rem;">
                <img class="card-img-top" src=@item.PictureLink alt="Card image cap">
                <div class="card-body align-items-sm-center">
                    <h6 class="text-danger" style=" font-family: 'PT Serif', serif;"><strong>Naujiena !</strong></h6>
                    <h5 class="card-title" style=" font-family: 'PT Serif', serif;">Laikrodis "@item.Title"</h5>
                    <h5 style="padding-bottom: 5px; font-family: 'PT Serif', serif;">@string.Format("{0:0.00}", item.Price) €</h5>
                    <a asp-action="Product" asp-controller="StoreProduct" asp-route-id="@item.ID" class="btn btn-outline-dark align-content-center">Detaliau</a>
                </div>
            </div>
        }
    }
</div>
<br />
