@model IEnumerable<MyShop.Models.CategoryModel>


@for (int i = 0; i < Model.Count(); i++)
{
    if (Model.ElementAt(i).ParentID == null)
    {
        <a href="#">@Model.ElementAt(i).Title</a>
    }
    @for (int j = 0; j < Model.Count(); j++)
    {

        if (Model.ElementAt(j).ParentID != null && Model.ElementAt(j).ParentID == Model.ElementAt(i).ID)
        {
            if (Model.ElementAt(j).Title.Contains("Vyriški") || Model.ElementAt(j).Title.Contains("Moteriški"))
            {
                <ul style="list-style-type: none; height:30px">
                    <li>
                        <a asp-controller="StoreProduct" asp-action="CategoryProducts" style="font-size:medium" asp-route-id=@Model.ElementAt(j).ID>@Model.ElementAt(j).Title</a>
                    </li>
                </ul>
            }
            else
            {
                <ul style="list-style-type: none;height:30px; padding-top:0px; margin-bottom:5px">
                    <li>
                        <a asp-controller="StoreProduct" asp-action="CategoryProducts" style="font-size:medium;" asp-route-id=@Model.ElementAt(j).ID>@Model.ElementAt(j).Title</a>
                    </li>
                </ul>
            }

        }
    }
}