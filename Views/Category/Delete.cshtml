@model MyShop.Models.CategoryModel

@{
    ViewData["Title"] = "Ištrinti kategoriją";
}


<h3>Ar tikrai norite ištrinti?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Ištrinti" class="btn btn-danger" /><br /><br />
        <a asp-action="Index">Grįžti į sąrašą</a>
    </form>
</div>
