@model MyShop.Models.ProductModel

@{
    ViewData["Title"] = "Produktas";
}

<style>
    #shadow21 {
        box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 14px 4px;
        background: rgb(255,255,255);
        background: linear-gradient(54deg, rgba(255,255,255,1) 0%, rgba(255,255,255,1) 62%, rgba(145,123,153,1) 100%);
    }
</style>

<div class="container">
    <div class="row no-gutters" style="background-color: white" ; id="shadow21">
        <div class="col offset-md-">
            <img src=@Html.DisplayFor(modelItem => modelItem.PictureLink) id="img" height="400">
        </div>
        <div class="col text-left align-self-center">
            <h4 style=" font-family: 'PT Serif', serif;padding-left:20px"><strong>PAVADINIMAS:</strong> @Html.DisplayFor(modelItem => modelItem.Title)</h4>
            <h4 style=" font-family: 'PT Serif', serif;padding-left:20px"><strong>BRANDAS:</strong> @Html.DisplayFor(modelItem => modelItem.Brand)</h4>
            <h4 style=" font-family: 'PT Serif', serif;padding-left:20px"><strong>DYDIS:</strong> @Html.DisplayFor(modelItem => modelItem.Size)</h4>
            @if (Model.ForSex.Contains('V'))
            {
                <h4 style=" font-family: 'PT Serif', serif;padding-left:20px"><strong>KATEGORIJA:</strong> Vyriškas</h4>
            }
            else
            {
                <h4 style=" font-family: 'PT Serif', serif;padding-left:20px"><strong>KATEGORIJA:</strong> Moteriškas</h4>
            }
            <h4 style=" font-family: 'PT Serif', serif;padding-left:20px"><strong>SPALVA:</strong> @Html.DisplayFor(modelItem => modelItem.Color)</h4>
            @if (Model.StockCount == 0)
            {
                <h4 style=" font-family: 'PT Serif', serif;padding-left:20px"><strong>KIEKIS SANDĖLYJE:</strong> <span class="text-danger">Nebeturime !</span></h4>
            }
            else
            {
                <h4 style=" font-family: 'PT Serif', serif;padding-left:20px"><strong>KIEKIS SANDĖLYJE:</strong> @Html.DisplayFor(modelItem => modelItem.StockCount) vnt.</h4>
            }
            <br />
            <h4 style="padding-bottom: 5px; font-family: 'PT Serif', serif;padding-left:20px"><strong>KAINA:</strong> @string.Format("{0:0.00}", Model.Price) €</h4>

            <div class="form-group text-center">
                @Html.ActionLink("Pridėti į krepšelį", "AddToCart", "StoreProduct", routeValues: new { @id = Model.ID }, new { @class = "btn btn-outline-dark" })
            </div>
        </div>
    </div>
    <div class="row no-gutters" style="background-color: white; margin-top: 10px; padding: 20px 20px 20px 20px" id="shadow21">
        <h2 style=" font-family: 'PT Serif', serif;">APRAŠYMAS</h2>
    </div>
    <div class="row no-gutters" style="background-color: white; padding: 20px 20px 20px 20px" id="shadow21">
        @if (string.IsNullOrEmpty(Model.Description))
        {
            <br />
            <p>Kolkas aprašymo nėra, bet greitai bus !</p>
        }
        else
        {
            <br />
            <p>@Model.Description</p>
        }
    </div>
</div>